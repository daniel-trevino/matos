{
  "name": "hardhat-core",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "account": "hardhat account",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "dev": "ts-node scripts/start.ts && hardhat node --network hardhat --export-all ../frontend/generated/contracts/hardhat_contracts.json",
    "export": "npm run compile && ts-node scripts/start.ts && hardhat export --export-all ../frontend/generated/contracts/hardhat_contracts.json",
    "compile": "hardhat compile --force",
    "deploy": "hardhat deploy --reset --export-all ../frontend/generated/contracts/hardhat_contracts.json",
    "generate": "hardhat generate",
    "postdeploy": "hardhat run scripts/publish.ts",
    "send": "hardhat send",
    "test": "hardhat test --network hardhat",
    "watch": "ts-node scripts/watch.ts"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.5",
    "@nomiclabs/hardhat-etherscan": "3.0.1",
    "@nomiclabs/hardhat-waffle": "2.0.2",
    "@openzeppelin/contracts": "4.5.0",
    "@tenderly/hardhat-tenderly": "1.0.13",
    "@typechain/hardhat": "4.0.0",
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "chalk": "4.1.0",
    "dotenv": "16.0.0",
    "ethers": "5.5.4",
    "generator": "*",
    "hardhat": "2.8.4",
    "hardhat-abi-exporter": "2.8.0",
    "hardhat-deploy": "0.10.5",
    "hardhat-gas-reporter": "1.0.8",
    "node-watch": "0.7.3",
    "ts-node": "10.5.0",
    "keccak256": "1.0.6",
    "merkletreejs": "0.2.30"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "9.0.0",
    "@typechain/hardhat": "4.0.0",
    "@typechain/truffle-v5": "7.0.0",
    "@types/chai-as-promised": "7.1.5",
    "@types/node": "17.0.20",
    "tsconfig": "*",
    "typechain": "7.0.0",
    "typescript": "4.5.5"
  }
}
